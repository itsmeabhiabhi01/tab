                    <!-- Device Switcher Container -->
                    <div class="device-switcher-container" id="device-switcher-container">
                        <div class="device-switcher-header">
                            <i class="fas fa-desktop text-purple-600 text-2xl"></i>
                            <div class="device-switcher-search">
                                <input id="device-switcher-search-input" placeholder="Search Devices" type="text" disabled/>
                            </div>
                            <button id="device-switcher-search-button" class="text-white" disabled><i class="fas fa-search"></i></button>
                        </div>
                        <div class="device-switcher-content">
                            <button class="device-button active" onclick="switchDevice('tablet')">Tablet</button>
                            <button class="device-button" onclick="switchDevice('pc')">PC</button>
                            <button class="device-button" onclick="switchDevice('phone')">Phone</button>
                        </div>
                    </div>
                    <!-- Dock -->
                    <div class="dock" id="dock">
                        <button class="dock-button" onclick="goHome()"><i class="fas fa-home"></i></button>
                        <button class="dock-button" onclick="openSearch()"><i class="fas fa-search"></i></button>
                        <button class="dock-button" onclick="switchDevice('phone')"><i class="fas fa-mobile-alt"></i></button>
                        <button class="dock-button" onclick="switchDevice('tablet')"><i class="fas fa-tablet-alt"></i></button>
                        <button class="dock-button" onclick="switchDevice('pc')"><i class="fas fa-desktop"></i></button>
                        <button class="dock-button" onclick="goBack()"><i class="fas fa-arrow-left"></i></button>
                    </div>
                </div>
                <div class="lockScreen" id="lockScreen">
                    <div class="lockContent">
                        <div class="statusBar"></div>
                        <div class="lockIcon"></div>
                        <div class="lockTime" id="lock-time">9:41<br />Apr 21, 2025</div>
                        <div class="widget-container">
                            <div class="widget time-widget">
                                <h3>Time</h3>
                                <p id="widget-time">9:41 AM</p>
                            </div>
                            <div class="widget weather-widget">
                                <h3>Weather</h3>
                                <img src="https://img.icons8.com/color/48/000000/partly-cloudy-day.png" alt="Weather">
                                <p>25°C, Partly Cloudy</p>
                            </div>
                            <div class="widget calendar-widget">
                                <h3>Calendar</h3>
                                <p>Apr 21, 2025</p>
                            </div>
                        </div>
                    </div>
                    <div class="interactionBar"></div>
                </div>
                <div class="interactionBar" id="inAppBar"></div>
            </div>
        </div>
    </div>

    <script>
        // YouTube API Key (Replace with your own if needed)
        const API_KEY = 'AIzaSyAsQ7E02xCW3qAdxwHK2PLj-pppMfm9fBw';

        // DOM Elements
        const ipadScreen = document.getElementById('ipadScreen');
        const appGrid = document.getElementById('appGrid');
        const dock = document.getElementById('dock');
        const lockScreen = document.getElementById('lockScreen');
        const inAppBar = document.getElementById('inAppBar');
        const searchBar = document.getElementById('search-bar');
        const appSearchInput = document.getElementById('app-search-input');
        const youtubeApp = document.getElementById('youtube-app');
        const gamesApp = document.getElementById('games-app');
        const socialApp = document.getElementById('social-app');
        const watchpartyApp = document.getElementById('watchparty-app');
        const deviceSwitcherApp = document.getElementById('device-switcher-app');
        const youtubeContainer = document.getElementById('youtube-container');
        const gamesContainer = document.getElementById('games-container');
        const socialContainer = document.getElementById('social-container');
        const watchpartyContainer = document.getElementById('watchparty-container');
        const deviceSwitcherContainer = document.getElementById('device-switcher-container');
        const youtubeSearchButton = document.getElementById('youtube-search-button');
        const gamesSearchButton = document.getElementById('games-search-button');
        const socialSearchButton = document.getElementById('social-search-button');
        const watchpartySearchButton = document.getElementById('watchparty-search-button');
        const youtubeSearchInput = document.getElementById('youtube-search-input');
        const gamesSearchInput = document.getElementById('games-search-input');
        const socialSearchInput = document.getElementById('social-search-input');
        const watchpartySearchInput = document.getElementById('watchparty-search-input');

        let powerVar = 0;

        // Lock Screen Interaction
        function lockClick() {
            lockScreen.style.backdropFilter = 'blur(2vh) brightness(1.2)';
            lockScreen.classList.add('hidden');
            appGrid.classList.add('show');
            dock.classList.add('show');
        }

        // Power Button Toggle
        function powerMe() {
            inAppBar.style.bottom = '-8%';
            inAppBar.style.pointerEvents = 'none';
            inAppBar.classList.remove('active');
            searchBar.classList.remove('active');
            appSearchInput.value = '';
            searchApps('');
            if (powerVar === 1) {
                ipadScreen.style.opacity = '1';
                ipadScreen.style.pointerEvents = 'all';
                powerVar = 0;
                lockScreen.style.transition = 'top 800ms ease-in, backdrop-filter 200ms ease-in';
                appGrid.style.transition = 'opacity 400ms ease-in-out';
            } else {
                ipadScreen.style.opacity = '0';
                ipadScreen.style.pointerEvents = 'none';
                powerVar = 1;
                setTimeout(() => {
                    lockScreen.style.transition = 'none';
                    appGrid.style.transition = 'none';
                    lockScreen.style.backdropFilter = 'blur(0)';
                    lockScreen.classList.remove('hidden');
                    appGrid.classList.remove('show');
                    dock.classList.remove('show');
                    [youtubeContainer, gamesContainer, socialContainer, watchpartyContainer, deviceSwitcherContainer].forEach(container => {
                        container.classList.remove('active');
                        const subGrid = container.querySelector('.sub-grid');
                        if (subGrid) subGrid.classList.remove('active');
                    });
                }, 300);
            }
        }

        // Open App
        function openApp(container) {
            appGrid.classList.remove('show');
            container.classList.add('active');
            inAppBar.style.bottom = '0';
            inAppBar.style.pointerEvents = 'all';
            inAppBar.classList.add('active');
            dock.classList.add('show');
            searchBar.classList.remove('active');
            appSearchInput.value = '';
            searchApps('');
            if (container === gamesContainer || container === watchpartyContainer) {
                container.querySelector('.sub-grid').classList.add('active');
            }
        }

        // Close App
        function closeApp(container) {
            container.classList.remove('active');
            appGrid.classList.add('show');
            inAppBar.style.bottom = '-8%';
            inAppBar.style.pointerEvents = 'none';
            inAppBar.classList.remove('active');
            dock.classList.add('show');
            searchBar.classList.remove('active');
            appSearchInput.value = '';
            searchApps('');
            const subGrid = container.querySelector('.sub-grid');
            if (subGrid) subGrid.classList.remove('active');
        }

        // Event Listeners for Apps
        youtubeApp.addEventListener('click', () => openApp(youtubeContainer));
        gamesApp.addEventListener('click', () => openApp(gamesContainer));
        socialApp.addEventListener('click', () => openApp(socialContainer));
        watchpartyApp.addEventListener('click', () => openApp(watchpartyContainer));
        deviceSwitcherApp.addEventListener('click', () => openApp(deviceSwitcherContainer));

        // Back Button
        function goBack() {
            const activeContainer = [youtubeContainer, gamesContainer, socialContainer, watchpartyContainer, deviceSwitcherContainer].find(container => container.classList.contains('active'));
            if (activeContainer) {
                closeApp(activeContainer);
            }
        }

        // Search Bar Toggle
        function openSearch() {
            searchBar.classList.toggle('active');
            appSearchInput.focus();
            if (!searchBar.classList.contains('active')) {
                appSearchInput.value = '';
                searchApps('');
            }
        }

        // App Search
        appSearchInput.addEventListener('input', () => {
            searchApps(appSearchInput.value);
        });

        function searchApps(query) {
            const logos = appGrid.querySelectorAll('.logo');
            logos.forEach(logo => {
                const title = logo.querySelector('p').textContent.toLowerCase();
                logo.style.display = title.includes(query.toLowerCase()) ? 'block' : 'none';
            });
        }

        // YouTube Search
        youtubeSearchButton.addEventListener('click', () => {
            searchYouTube(youtubeSearchInput.value);
        });

        youtubeSearchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                searchYouTube(youtubeSearchInput.value);
            }
        });

        function searchYouTube(query) {
            if (!query.trim()) return;
            const url = `https://www.googleapis.com/youtube/v3/search?part=snippet&type=video&q=${encodeURIComponent(query)}&key=${API_KEY}`;
            const videoList = document.getElementById('youtube-video-list');
            const iframe = document.getElementById('youtube-iframe');

            fetch(url)
                .then(response => {
                    if (!response.ok) throw new Error('Network response was not ok');
                    return response.json();
                })
                .then(data => {
                    videoList.innerHTML = '';
                    if (!data.items || data.items.length === 0) {
                        videoList.innerHTML = '<p class="text-white text-center">No results found</p>';
                        return;
                    }
                    data.items.forEach(item => {
                        const videoItem = document.createElement('div');
                        videoItem.className = 'bg-gray-700 rounded-lg overflow-hidden cursor-pointer';
                        videoItem.innerHTML = `
                            <img src="${item.snippet.thumbnails.medium.url}" alt="${item.snippet.title}" class="w-full"/>
                            <div class="p-2">
                                <h3 class="font-bold text-sm text-white">${item.snippet.title}</h3>
                                <p class="text-gray-400 text-xs">${item.snippet.channelTitle}</p>
                            </div>
                        `;
                        videoItem.addEventListener('click', () => {
                            iframe.src = `https://www.youtube.com/embed/${item.id.videoId}?autoplay=1`;
                            iframe.classList.remove('hidden');
                        });
                        videoList.appendChild(videoItem);
                    });
                })
                .catch(error => {
                    console.error('YouTube API error:', error);
                    videoList.innerHTML = '<p class="text-white text-center">Error fetching videos</p>';
                });
        }

        // Games Search
        gamesSearchButton.addEventListener('click', () => {
            searchGames(gamesSearchInput.value);
        });

        gamesSearchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                searchGames(gamesSearchInput.value);
            }
        });

        function searchGames(query) {
            const gamesList = document.getElementById('games-list');
            const logos = gamesList.querySelectorAll('.logo');
            logos.forEach(logo => {
                const title = logo.querySelector('p').textContent.toLowerCase();
                logo.style.display = title.includes(query.toLowerCase()) ? 'block' : 'none';
            });
        }

        // Social Search
        socialSearchButton.addEventListener('click', () => {
            searchSocial(socialSearchInput.value);
        });

        socialSearchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                searchSocial(socialSearchInput.value);
            }
        });

        function searchSocial(query) {
            const socialList = document.getElementById('social-list');
            socialList.innerHTML = '<p class="text-white text-center">Social search not implemented</p>';
        }

        // Watch Party Search
        watchpartySearchButton.addEventListener('click', () => {
            searchWatchparty(watchpartySearchInput.value);
        });

        watchpartySearchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                searchWatchparty(watchpartySearchInput.value);
            }
        });

        function searchWatchparty(query) {
            const watchpartyList = document.getElementById('watchparty-list');
            const logos = watchpartyList.querySelectorAll('.logo');
            logos.forEach(logo => {
                const title = logo.querySelector('p').textContent.toLowerCase();
                logo.style.display = title.includes(query.toLowerCase()) ? 'block' : 'none';
            });
        }

        // Device Switching
        function switchDevice(device) {
            const buttons = document.querySelectorAll('.device-button');
            buttons.forEach(btn => btn.classList.remove('active'));
            const targetButton = Array.from(buttons).find(btn => btn.textContent.toLowerCase() === device);
            if (targetButton) targetButton.classList.add('active');
            if (device === 'pc') {
                document.documentElement.style.setProperty('--sizeVar', '80vmin');
            } else if (device === 'phone') {
                document.documentElement.style.setProperty('--sizeVar', '50vmin');
            } else {
                document.documentElement.style.setProperty('--sizeVar', '95vmin');
            }
        }

        // Go Home
        function goHome() {
            inAppBar.style.bottom = '-8%';
            inAppBar.style.pointerEvents = 'none';
            inAppBar.classList.remove('active');
            appGrid.classList.add('show');
            dock.classList.add('show');
            searchBar.classList.remove('active');
            appSearchInput.value = '';
            searchApps('');
            [youtubeContainer, gamesContainer, socialContainer, watchpartyContainer, deviceSwitcherContainer].forEach(container => {
                container.classList.remove('active');
                const subGrid = container.querySelector('.sub-grid');
                if (subGrid) subGrid.classList.remove('active');
            });
        }

        // Time Update
        function checkTime() {
            const day = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
            const month = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            const d = new Date();
            const hours = d.getHours();
            const minutes = d.getMinutes();
            const ampm = hours >= 12 ? 'PM' : 'AM';
            let displayHours = hours % 12;
            displayHours = displayHours ? displayHours : 12;
            const displayMinutes = minutes < 10 ? "0" + minutes : minutes;
            document.getElementById("lock-time").innerHTML =
                `${displayHours}:${displayMinutes}<br/>${day[d.getDay()]}, ${month[d.getMonth()]} ${d.getDate()}`;
            document.getElementById("widget-time").innerHTML = `${displayHours}:${displayMinutes} ${ampm}`;
            document.getElementById("calendar-widget").innerHTML = `<h3>Calendar</h3><p>${month[d.getMonth()]} ${d.getDate()}, ${d.getFullYear()}</p>`;
            setTimeout(checkTime, 500);
        }

        // Initialize
        setTimeout(() => {
            ipadScreen.style.opacity = '1';
        }, 1000);
        lockScreen.classList.remove('hidden');
        appGrid.classList.remove('show');
        dock.classList.remove('show');
        inAppBar.style.bottom = '-8%';
        inAppBar.style.pointerEvents = 'none';
        lockScreen.addEventListener('click', lockClick);
        inAppBar.addEventListener('click', goHome);
    </script>
</body>
</html>
